// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Tenant model for multi-tenancy
model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users         User[]
  beneficiaries Beneficiary[]
}

// User model for admin and case workers
model User {
  id        String   @id @default(uuid())
  tenantId  String
  role      String   // 'admin', 'case_worker', 'member'
  email     String?
  phone     String?
  name      String
  password  String?  // hashed password for admin/case_worker
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, email])
  @@index([tenantId])
}

// Beneficiary model for Medicaid members
model Beneficiary {
  id               String   @id @default(uuid())
  tenantId         String
  medicaidId       String
  firstName        String
  lastName         String
  dateOfBirth      String?
  phone            String?
  email            String?
  engagementStatus String   @default("unknown") // 'active', 'non_compliant', 'exempt', 'unknown'
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, medicaidId])
  @@index([tenantId])
  @@index([tenantId, engagementStatus])
}
