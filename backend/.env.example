# Environment
NODE_ENV=development

# Server Configuration
PORT=4000

# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://medicaid_ce:medicaid_ce_password@localhost:5432/medicaid_ce"

# JWT Configuration
# CRITICAL: Generate with: openssl rand -base64 64
# Minimum 32 characters required in production
JWT_SECRET="your-secret-here-change-in-production"
JWT_EXPIRES_IN="24h"

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Logging
LOG_LEVEL="debug"

# CBV (Consent-Based Verification) Payroll Integration
# Optional: Set these to enable employment verification via iv-cbv-payroll service
# Leave blank to disable external verification
CBV_API_URL=""
CBV_API_KEY=""
CBV_HMAC_SECRET=""
